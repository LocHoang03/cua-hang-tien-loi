<%- include('../includes/util/head.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/global.css">
<link rel="stylesheet" href="/css/header-footer/header.css">
<link rel="stylesheet" href="/css/header-footer/footer.css">
<link rel="stylesheet" href="/css/shop/news.css">
<link rel="stylesheet" href="/css/header-footer/nav-user.css">
<link href="node_modules/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


</head>
<body>
    <main>
        <%- include('../includes/header/header.ejs') %>
        <div class="max-width container-new">
            <div class="news__banner">
                <div class="news__banner-container-img">
                  <img
                    src="/image/nextstore.jpg"
                    class="news__banner-img"
                  />
                </div>
            </div>

            <div class="news__content">
                <h2 class="news__content-title">Tin tức công ty</h2>
                <div class="news__content-container">
                    <% companys.map((comp, id) => { %>
                        <div class="news__content-product-container" key="<%= id %>">
                          <a href='/'>
                            <% if (comp.img) { %>
                              <img
                                src="<%= comp.img %>"
                                class="news__content-img"
                              />
                            <% } %>
                      
                            <div class="news__content-title-product">
                              <h2><%= comp.title %></h2>
                            </div>
                      
                            <div class="news__border"></div>
                      
                            <% if (comp.day && comp.month) { %>
                              <div class="news__content-post-date">
                                <span class="news__content-day"><%= comp.day %></span>
                                <span class="news__content-month"><%= comp.month %></span>
                              </div>
                            <% } %>
                          </a>
                        </div>
                      <% }) %>                      
                </div>
            </div>

            <div class="news__content">
                <h2 class="news__content-title">Trách nhiệm cộng đồng</h2>
                <div class="news__content-container">
                    <% responsibility.map((respon, id) => { %>
                        <div class="news__content-product-container" key="<%= id %>">
                          <a href='/'>
                            <% if (respon.img) { %>
                              <img
                                src="<%= respon.img %>"
                                class="news__content-img"
                              />
                            <% } %>
                      
                            <div class="news__content-title-product">
                              <h2><%= respon.title %></h2>
                            </div>
                      
                            <div class="news__border"></div>
                      
                            <% if (respon.day && respon.month) { %>
                              <div class="news__content-post-date">
                                <span class="news__content-day"><%= respon.day %></span>
                                <span class="news__content-month"><%= respon.month %></span>
                              </div>
                            <% } %>
                          </a>
                        </div>
                      <% }) %>                      
                </div>
            </div>
        </div>

        <%- include('../includes/footer/footer.ejs') %>
    </main>
<%- include('../includes/util/end.ejs') %>