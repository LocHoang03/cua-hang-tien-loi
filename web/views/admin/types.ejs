<%- include('../includes/util/head.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/global.css">
<link rel="stylesheet" href="/css/header-footer/header.css">
<link rel="stylesheet" href="/css/header-footer/footer.css">
<link rel="stylesheet" href="/css/category.css">
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/admin/type.css">
<link rel="stylesheet" href="/css/header-footer/nav-user.css">
<link href="node_modules/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


</head>
<body>
    <main>
        <%- include('../includes/header/header.ejs') %>
        <div class="admin_container max-width">
            <div>
                <%- include('../includes/util/product-content.ejs') %>   
                <div>
                    <div class="admin-content">
                        <div class="category col-sm-3">
                            <%- include('../includes/util/category.ejs') %>
                        </div>
                        <div class="list-product col-sm-9">
                            <h3 class="list-types__title">Tất cả loại Sản phẩm</h3>
                            <% if (types && types.length > 0) { %>
                                <ul class="list-types__container">
                                  <li class="list-types__types-container">
                                    <div class="list-types__name-types list-types__bold">
                                      <h2>Tên loại (English)</h2>
                                    </div>
                                    <div class="list-types__vn-types list-types__bold">
                                      <span>Tên loại (Tiếng việt)</span>
                                    </div>
                                    <div class="list-types__action list-types__bold">
                                      Hành động
                                    </div>
                                  </li>
                                  <% types.forEach(function(type) { %>
                                  <li class="list-types__types-container col-sm-4">
                              
                                    <div class="list-types__name-types">
                                      <h2><%= type.nametype %></h2>
                                    </div>
                                    <div class="list-types__vn-types">
                                      <span><%= type.vntype %></span>
                                    </div>
                                    <div class="list-types__form-add">
                                      <div class="list-types__detail-container">
                                        <a
                                          href="/admin/edit-type/<%= type._id %>/?edit=true"
                                          class="list-types__detail"
                                        >
                                          Sửa
                                        </a>
                                      </div>
                                      <form
                                        action="/admin/delete-type"
                                        method="post"
                                        class="list-types__form-delete"
                                      >
                                        <button class="list-types__btn">Xóa</button>
                                        <input type="text" hidden name="typeId" value="<%= type._id %>" />
                                      </form>
                                    </div>
                                  </li>
                                  <% }); %>
                                </ul>
                                <% } else { %>
                                <div class="no-product">
                                  <h3>Không có loại sản phẩm nào</h3>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
        <%- include('../includes/footer/footer.ejs') %>
    </main>
<%- include('../includes/util/end.ejs') %>